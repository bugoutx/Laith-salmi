generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String   @id
  slug      String   @unique
  title     String   @db.VarChar(500)
  excerpt   String   @db.Text
  content   String   @db.Text
  author    String   @default("Ù„ÙŠØ« Ø§Ù„Ø³Ø§Ù„Ù…ÙŠ") @db.VarChar(255)
  date      DateTime @db.Date
  category  String   @default("ØªØ­Ù„ÙŠÙ„ ÙÙ†ÙŠ") @db.VarChar(255)
  image     String   @default("/placeholder-blog.jpg") @db.VarChar(500)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamp(0)

  @@index([slug])
  @@index([date])
  @@index([category])
  @@map("blogs")
}

model Service {
  id              String   @id
  title           String   @db.VarChar(500)
  subtitle        String?  @db.VarChar(500)
  description     String   @db.Text
  valueProposition String? @map("value_proposition") @db.Text
  icon            String   @default("ğŸ¯") @db.VarChar(100)
  color           String   @default("from-green-500/20 to-emerald-500/20") @db.VarChar(100)
  accentColor     String   @default("green-500") @map("accent_color") @db.VarChar(100)
  displayOrder    Int      @default(0) @map("display_order")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt       DateTime @updatedAt @map("updated_at") @db.Timestamp(0)

  @@index([displayOrder])
  @@index([isActive])
  @@map("services")
}

model ContentItem {
  id          String   @id
  type        String   @db.VarChar(20) // 'video' or 'image'
  mediaUrl    String   @db.VarChar(500) @map("media_url")
  title       String?  @db.VarChar(500)
  subtitle    String?  @db.VarChar(500)
  description String?  @db.Text
  eyebrow     String?  @db.VarChar(255)
  displayOrder Int     @default(0) @map("display_order")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamp(0)

  @@index([displayOrder])
  @@index([isActive])
  @@index([type])
  @@map("content_items")
}

